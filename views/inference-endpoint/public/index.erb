<% @page_title = "Inference Endpoints" %>
<%== render("inference-endpoint/tabbar") %>

  <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900">API Keys</h3>
      <div class="mt-2 text-sm text-gray-500">
        <p>These keys are needed to authenticate with our public API Endpoints. For more details see ...</p>
      </div>
    </div>

    <div class="grid gap-6">
  <!-- Detail Card -->
  <% data = [
    ["first key", "asdfasdfasdfasdfasdf", { copieble: true, revealable: true }],
    ["second key", "asdfasdfasdfasdfasdf", { copieble: true, revealable: true }]
  ]
  %>
  <%== render("components/kv_data_card", locals: { data: data }) %>

<% if @public_inference_endpoints.count > 0 %>
  <div class="grid gap-6">
    <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Location</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">State</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @public_inference_endpoints.each do |ie| %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6" scope="row">
                <a href="<%= @project_data[:path] %><%= ie[:path] %>" class="text-orange-600 hover:text-orange-700">
                  <%= ie[:name] %>
                </a>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= ie[:location] %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <%== render("components/inference_endpoint_state_label", locals: { state: ie[:state] }) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="mt-6">
    <%== render(
    "components/empty_state",
    locals: {
      icon: "ai-robot",
      title: "No Public Inference Endpoints",
    }
  ) %>
  </div>
<% end %>
