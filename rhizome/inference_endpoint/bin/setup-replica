#!/bin/env ruby
# frozen_string_literal: true

require_relative "../../common/lib/util"
require_relative "../lib/replica_setup"

replica_setup = ReplicaSetup.new
params = JSON.parse($stdin.read)

begin
  inference_gateway_version = params.fetch("inference_gateway_version")
  inference_gateway_sha = params.fetch("inference_gateway_sha")
  inference_gateway_params = params.fetch("inference_gateway_params")
  inference_engine = params.fetch("inference_engine")
  inference_engine_params = params.fetch("inference_engine_params")
  model = params.fetch("model")
rescue KeyError => e
  puts "Needed #{e.key} in parameters json"
  exit 1
end

replica_setup.prep(
  inference_gateway_version: inference_gateway_version,
  inference_gateway_sha: inference_gateway_sha,
  inference_gateway_params: inference_gateway_params,
  inference_engine: inference_engine,
  inference_engine_params: inference_engine_params,
  model: model
)
